{% block body %}
<div class="container mt-5 col-lg-6 col-xl-4">
      <div class="d-flex justify-content-end">
            <a href="{{ app.request.headers.get('referer') }}" class="btn  btn-outline-secondary">Retour</a>
      </div>
      <h2 class="mt-3">Ajouter des photos</h2>
      {{ form_start(form, {"attr": {"novalidate": "novalidate"}}) }}
            <div>
                  {{ form_label(form.imageFile) }}{{ form_widget(form.imageFile) }}
