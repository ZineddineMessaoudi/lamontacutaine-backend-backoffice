                  <div class=" form-error my-2">
                        {{ form_errors(form.imageFile) }}
                  </div>
            </div>
      
            <div class="{% if type is defined %}d-none{% endif %}">
                  {{ form_label(form.event) }} {{ form_widget(form.event) }}
                  <div class="form-error">
                        {{ form_errors(form.event) }}
                  </div>
            </div>
      
            <div class="text-center my-3">
            <button class="btn btn-outline-primary">Valider</button>
            </div>
      {{ form_end(form) }}
{% endblock %}