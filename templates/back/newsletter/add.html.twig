{% extends 'base.html.twig' %}

{% block title %}Créer une Newsletter{% endblock %}

{% block body %}
<div class="container mt-5 col-lg-6 col-xl-4">
      <div class="d-flex justify-content-end">
            <a href="{{ app.request.headers.get('referer') }}" class="btn  btn-outline-secondary">Retour</a>
      </div>
      <h2 class="mt-3">Créer une newsletter</h2>
      {{ form_start(form, {"attr": {"novalidate": "novalidate"}}) }}
            <div>
                  {{ form_label(form.subject) }} {{ form_widget(form.subject) }}
                  <div class="form-error">
                        {{ form_errors(form.subject) }}
                  </div>
            </div>
            <div>
                  {{ form_label(form.title) }} {{ form_widget(form.title) }}
                  <div class="form-error">
                        {{ form_errors(form.title) }}
                  </div>
            </div>
            <div>
               {{ form_label(form.body) }} {{ form_widget(form.body) }}
               <div class="form-error">
                     {{ form_errors(form.body) }}
               </div>
            </div>
            <div class="text-center my-3">
            <button class="btn btn-outline-primary">Valider</button>
            </div>
      {{ form_end(form) }}
</div>
{% endblock %}