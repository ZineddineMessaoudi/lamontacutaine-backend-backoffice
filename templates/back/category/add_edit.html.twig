{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container mt-5 col-lg-6 col-xl-4">
      <div class="d-flex justify-content-end">
            <a href="{{  path("back_category_list") }}" class="btn  btn-outline-secondary">Retour à la liste</a>
      </div>
      <h2 class="mt-3">Créer/Editer une Catégorie</h2>
      {{ form_start(form, {"attr": {"novalidate": "novalidate"}}) }}
            <div>
                  {{ form_label(form.name) }} {{ form_widget(form.name) }}
                  <div class="form-error">
                        {{ form_errors(form.name) }}
                  </div>
            </div>
            <div class="text-center my-3">
            <button class="btn btn-outline-primary">Valider</button>
            </div>
      {{ form_end(form) }}
{% endblock %}