{% extends 'base.html.twig' %}

{% block title %}Ajouter un document{% endblock %}

{% block body %}
<div class="container mt-5 col-lg-6 col-xl-4">
      <div class="d-flex justify-content-end">
            <a href="{{ path("back_document_list") }}" class="btn  btn-outline-secondary">Retour Ã  la liste</a>
      </div>
      <h2 class="mt-3">Ajouter un document</h2>
      {{ form_start(form, {"attr": {"novalidate": "novalidate"}}) }}
            <div class="mt-3">
                  {{ form_label(form.documentFile) }}{{ form_widget(form.documentFile) }}
                  <div class=" form-error my-2">
                        {{ form_errors(form.documentFile) }}
                  </div>
            </div>
            <div class="mt-3">
                  {{ form_label(form.title) }} {{ form_widget(form.title) }}
                  <div class="form-error">
                        {{ form_errors(form.title) }}
                  </div>
            </div>            
            <div class="mt-3">
                  {{ form_label(form.type) }} {{ form_widget(form.type) }}
                  <div class="form-error">
                        {{ form_errors(form.type) }}
                  </div>
            </div>
            <div class="mt-3">
                  {{ form_label(form.date) }} {{ form_widget(form.date) }}
                  <div class="form-error">
                        {{ form_errors(form.date) }}
                  </div>
            </div>
            <div class="text-center my-3">
            <button class="btn btn-outline-primary">Valider</button>
            </div>
      {{ form_end(form) }}
{% endblock %}