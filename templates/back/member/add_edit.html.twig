			{{ form_errors(form.password) }}
		</div>
	</div>
	<div class="mt-3">
		{{ form_label(form.membership_statut) }} {{ form_widget(form.membership_statut) }}
		<div class="form-error">
			{{ form_errors(form.membership_statut) }}
		</div>
	</div>
	<div class="mt-3">
		{{ form_label(form.isAdmin) }} {{ form_widget(form.isAdmin) }}
