{% extends 'base.html.twig' %}

{% block title %}Créer/Editer un membre
{% endblock %}

{% block body %}
<div class="container mt-5 col-lg-6">
	<div class="d-flex justify-content-end">
		<a href="{{  path("back_member_list") }}" class="btn  btn-outline-secondary">Retour à la liste</a>
	</div>
	<h2 class="">Créer/Editer un Membre</h2>
	<div class="mt-3" >
		{{ form_start(form, {"attr": {"novalidate": "novalidate"}}) }}
	</div>
	<div class="mt-3">
		{{ form_label(form.firstname) }} {{ form_widget(form.firstname) }}
