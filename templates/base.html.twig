<!DOCTYPE html>
<html lang="fr">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<!-- Bootstrap CSS -->
		<link href="{{ asset('asset/css/bootstrap.css')}}" rel="stylesheet"> 
		<link href="{{ asset('asset/css/bootstrap.min.css')}}" rel="stylesheet">
		<!-- Bootstrap icons -->
		<link
		rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
		<!-- Our custom CSS -->
		<link
		rel="stylesheet" href="#">
		<!-- favicon -->
		<link
		rel="shortcut icon" href="{{ asset('asset/images/logo.png')}}" type="image/x-icon">
		<!-- Js -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}

		<title>
			{% block title %}La Montacutaine
			{% endblock %}
		</title>

	</head>
	<body>
		<!-- Nav -->
		{% if is_granted('IS_AUTHENTICATED_FULLY') %}
		<nav class="navbar navbar-expand-lg bg-info">
			<div class="container-fluid">
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMainMenu" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<a class="mx-auto navbar-brand" href="{{ path("back_home") }}">
						<img src="{{ asset('asset/images/logo.png')}}" height="60" alt="Logo la Montacutaine">
					</a>
				<div class="collapse navbar-collapse" id="navbarMainMenu">
						<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a class="nav-link {{ app.request.get('_route') == 'back_home' ? 'active' }}" href="{{ path('back_home') }}">
									<i class="bi bi-house"></i>
									Accueil</a>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link {{ app.request.get('_route') == 'back_event_create' ? 'active' }} {{ app.request.get('_route') == 'back_event_list' ? 'active' }} {{ app.request.get('_route') == 'back_category_list' ? 'active' }}" href="#" role="button" data-bs-toggle="dropdown">
									<i class="bi bi-calendar-week"></i>
									Evènements</a>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item text-dark {{ app.request.get('_route') == 'back_event_create' ? 'active' }}" href="{{ path('back_event_create') }}">Créer un évènement</a>
									</li>
									<hr class="dropdown-divider">
									<li>
										<a class="dropdown-item text-dark {{ app.request.get('_route') == 'back_event_list' ? 'active' }}" href="{{ path('back_event_list') }}">Liste des évènements</a>
									</li>
									<li>
										<a class="dropdown-item text-dark {{ app.request.get('_route') == 'back_category_list' ? 'active' }}" href="{{ path("back_category_list") }}">Liste des catégories</a>
									</li>
								</ul>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link {{ app.request.get('_route') == 'back_media_massupload' ? 'active' }}" href="{{ path("back_media_massupload") }}">
									<i class="bi bi-image"></i> Ajouter des photos
								</a>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link {{ app.request.get('_route') == 'back_document_create' ? 'active' }} {{ app.request.get('_route') == 'back_document_list' ? 'active' }}" href="#" role="button" data-bs-toggle="dropdown">
									<i class="bi bi-file-earmark-text"></i> Documents
								</a>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item text-dark" href="{{ path("back_document_create") }}">Ajouter un document</a>
									</li>
									<li>
										<a class="dropdown-item text-dark" href="{{ path("back_document_list") }}">Liste des documents</a>
									</li>
								</ul>
							</li>
							<li class="nav-item">
								<a class="nav-link {{ app.request.get('_route') == 'back_newsletter_create' ? 'active' }}" href="{{ path("back_newsletter_create") }}">
									<i class="bi bi-newspaper"></i> Newsletter
								</a>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link {{ app.request.get('_route') == 'back_member_create' ? 'active' }} {{ app.request.get('_route') == 'back_user_list' ? 'active' }} {{ app.request.get('_route') == 'back_member_list' ? 'active' }}" href="#" role="button" data-bs-toggle="dropdown">
									<i class="bi bi-people"></i> Utilisateurs
								</a>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item text-dark {{ app.request.get('_route') == 'back_member_create' ? 'active' }}" href="{{ path("back_member_create") }}">Créer un Membre</a>
									</li>
									<hr class="dropdown-divider">
									<li>
										<a class="dropdown-item text-dark {{ app.request.get('_route') == 'back_member_list' ? 'active' }}" href="{{ path("back_member_list") }}">Liste des Membres</a>
									</li>
									<li>
										<a class="dropdown-item text-dark {{ app.request.get('_route') == 'back_user_list' ? 'active' }}" href="{{ path("back_user_list") }}">Tous les Utilisateurs</a>
									</li>
								</ul>
							</li>
							<li class="nav-item">
								<a class="nav-link {{ app.request.get('_route') == 'back_comment_list' ? 'active' }}" href="{{ path("back_comment_list") }}">
									<i class="bi bi-chat-left-text"></i> Commentaires
								</a>
							</li>
						</ul>
					<li class="navbar-nav dropdown nav-item ms-auto">
						<a class="nav-link dropdown-toggle fw-bold" href="#" role="button" data-bs-toggle="dropdown">
							<span>{{ app.user.firstname }} {{ app.user.lastname }}</span>
							<i class="bi bi-person-fill-check"></i>
						</a>
						<ul class="dropdown-menu">
							<li>
								<a class="dropdown-item text-dark" href="https://lamontacutaine.fr/espace-membre/profil">Profil</a>
							</li>
							<li>
								<a class="dropdown-item text-dark" href="https://lamontacutaine.fr" target="_blank">Accueil visiteur</a>
							</li>
							<li>
								<hr class="dropdown-divider">
							</li>
							<li>
								<a class="dropdown-item text-danger" href="{{ path("app_back_logout") }}">Déconnexion</a>
							</li>
						</ul>
					</li>
				</div>
			</div>
		</nav>
		<!-- End Nav -->
		{% endif %}
		{% for message in app.session.flashbag.get('success') %}
		<div class="col-6 mx-auto alert alert-success text-center">{{ message }}</div>
		{% endfor %}
		{% for message in app.session.flashbag.get('error') %}
		<div class="col-6 mx-auto alert alert-danger text-center">{{ message }}</div>
		{% endfor %}
		{% block body %}
		{% endblock %}
	</body>
</html>
